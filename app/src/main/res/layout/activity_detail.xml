<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.gustavoballeste.authlogin.detail.DetailActivity">

    <TextView
        android:id="@+id/first_name_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_single"
        android:layout_marginStart="@dimen/margin_single"
        android:layout_marginTop="24dp"
        android:text="First name"
        android:textColor="@color/label_font_color"
        android:textSize="@dimen/label_font_size" />

    <android.support.v7.widget.CardView
        android:id="@+id/first_name_card_view"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_single"
        android:layout_marginBottom="@dimen/margin_single"
        android:layout_marginEnd="@dimen/margin_single"
        android:layout_marginLeft="@dimen/margin_double"
        android:layout_marginRight="@dimen/margin_double"
        android:layout_marginStart="@dimen/margin_single">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_double"
                android:hint="Your first name"
                android:text="" />

            <ImageView
                android:id="@+id/edit_first_name_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/margin_single"
                android:maxWidth="@dimen/margin_single"
                android:layout_marginRight="@dimen/margin_single"
                android:layout_weight=".10"
                android:src="@drawable/ic_mode_edit_black_24dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/last_name_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_single"
        android:layout_marginStart="@dimen/margin_single"
        android:layout_marginTop="24dp"
        android:text="Last name"
        android:textColor="@color/label_font_color"
        android:textSize="@dimen/label_font_size" />

    <android.support.v7.widget.CardView
        android:id="@+id/last_name_card_view"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/margin_single"
        android:layout_marginEnd="@dimen/margin_single"
        android:layout_marginLeft="@dimen/margin_double"
        android:layout_marginRight="@dimen/margin_double"
        android:layout_marginStart="@dimen/margin_single"
        android:layout_marginTop="@dimen/margin_single">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/last_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Your last name"
                android:layout_marginLeft="@dimen/margin_double"
                android:text="" />

            <ImageView
                android:id="@+id/edit_last_name_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_single"
                android:layout_weight=".10"
                android:src="@drawable/ic_mode_edit_black_24dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/password_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_single"
        android:layout_marginStart="@dimen/margin_single"
        android:layout_marginTop="24dp"
        android:text="Password"
        android:textColor="@color/label_font_color"
        android:textSize="@dimen/label_font_size"  />

    <android.support.v7.widget.CardView
        android:id="@+id/password_card_view"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/margin_single"
        android:layout_marginEnd="@dimen/margin_single"
        android:layout_marginLeft="@dimen/margin_double"
        android:layout_marginRight="@dimen/margin_double"
        android:layout_marginStart="@dimen/margin_single"
        android:layout_marginTop="@dimen/margin_single" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/password_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_double"
                android:layout_weight="1"
                android:hint="************" />

            <ImageView
                android:id="@+id/edit_password_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_single"
                android:layout_weight=".10"
                android:src="@drawable/ic_mode_edit_black_24dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
